<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true">
            <bind key="$neosClient" type="service" id="nlx-neos-content.neos-client"/>
        </defaults>
        <prototype namespace="nlxNeosContent\" resource="../../*"/>

        <service id="nlx-neos-content.neos-client" class="Psr\Http\Client\ClientInterface">
            <factory class="nlxNeosContent\HttpClient\NeosClientFactory" method="create"/>
            <argument type="service" id="nlxNeosContent\Service\ConfigService"/>
        </service>
    </services>
</container>
